  <body>
    <header>
      <img
      id="header-logo"
      src="./assets/spaghetti-code-logo.png"
      alt="spaghetti-code"
      />
      <img
      id="header-avatar"
      width="40px"
      src="<%= formattedUser.avatar_url %>"
      alt=""
      />
      <a href="/dashboard" id="header-username"><%= formattedUser.username %></a>
      <p id="header-score">Score: <%= formattedUser.score %></p>
      <a id="header-logout" href="/log-out">logout</a>
    </header>

    <main>
      <section id="modes">
        <!-- <a href="" class="box-shadow-button">
